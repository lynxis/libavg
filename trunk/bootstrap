#!/bin/bash
set -x
if [[ `uname` = Darwin ]] 
then
    # If we're running on Mac OS X, libtoolize is named glibtoolize to
    # avoid name clashes.
    glibtoolize --force
    aclocal -I m4
    automake --foreign --add-missing --copy 
    autoconf
else
    libtoolize --force
    aclocal -I m4
    automake --foreign --add-missing --copy 
    autoconf
fi
